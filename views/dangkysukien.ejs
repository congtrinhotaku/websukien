<!DOCTYPE html>



<head>
    <meta charset="UTF-8">
    <title>Đăng ký sự kiện</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body
    style="background-image: url(https://danangfantasticity.com/wp-content/uploads/2025/03/2-cau-song-han-quay-23h00-thu-bay-va-chu-nhat-hang-tuan-01.jpg);">

    <%- include("partials/header") %>
        <div class="container mt-5 mb-5">
            <div class="mt-5 pt-5 row">
                <!-- Bên trái: Thông tin sự kiện -->
                <div class="col-md-6">
                    <div class="card">
                        <% if(event.banner_image) { %>
                            <img src="<%= event.banner_image %>" class="card-img-top" alt="Banner sự kiện">
                            <% } else { %>
                                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center"
                                    style="height: 250px;">
                                    Chưa có banner
                                </div>
                                <% } %>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= event.name %>
                                        </h5>
                                        <p class="card-text">
                                            <%= event.description %>
                                        </p>
                                        <p class="card-text"><strong>Thời gian:</strong>
                                            <%= event.start_time.toLocaleString() %> - <%=
                                                    event.end_time.toLocaleString() %>
                                        </p>
                                        <p class="card-text"><strong>Địa điểm:</strong>
                                            <%= event.location %>
                                        </p>
                                        <p class="card-text"><strong>Danh mục:</strong>
                                            <%= event.category %>
                                        </p>
                                    </div>
                    </div>
                </div>

                <!-- Bên phải: Form đăng ký -->
                <div class="col-md-6">
                    <div class="card p-4">
                        <h4 class="mb-4">Đăng ký tham gia</h4>
                        <form action="/users/event/invite/<%= event._id%>" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Họ và tên</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" id="phone" name="phone" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <%- include("partials/footer") %>
</body>

</html>