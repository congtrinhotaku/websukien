<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Quản lý sự kiện</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-light border-end p-3" style="width: 220px; min-height: 100vh;">
            <h4>Menu</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a class="nav-link" href="/events">Danh sách sự kiện</a></li>
                <li class="nav-item mb-2"><a class="nav-link" href="/events/create">Tạo sự kiện</a></li>
                <!-- Sau này thêm CRUD khác -->
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <div class="row">
                <h2 class="mb-4 col">Danh sách sự kiện</h2>
              <a href="/users/createEvent" class="btn btn-success btn mb-3 col-auto">Tạo Sự kiện mới</a>

            </div>
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Tên</th>
                        <th>Mô tả</th>
                        <th>Thể loại</th>
                        <th>Bắt đầu</th>
                        <th>Kết thúc</th>
                        <th>Địa điểm</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach(event => { %>
                        <tr>
                            <td><%= event.name %></td>
                            <td><%= event.description %></td>
                            <td><%= event.category %></td>
                            <td><%= new Date(event.start_time).toLocaleString() %></td>
                            <td><%= new Date(event.end_time).toLocaleString() %></td>
                            <td><%= event.location %></td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/users/events/edit/<%= event._id %>">Sửa</a>
                                <form action="/users/events/delete/<%= event._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
